@using MvcCv.Models.Entity
@model List<TblYeteneklerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{string renk = "";}
@{string labelrenk = "";}


<!DOCTYPE html>
<html>
<head>
    <style>
        body, html {
            height: 100%;
            margin: 0;
        }

        .wrapper {
            min-height: 100%;
            display: flex;
            flex-direction: column;
        }

        .content {
            flex-grow: 1;
        }

        .card-body {
            overflow-x: auto;
        }

        .table {
            width: 100%;
            white-space: nowrap;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yetenek Listem</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <a href="/Yetenekler/YeniYetenek/" class="btn btn-info">Yeni Yetenek Ekle</a>
                                <br />
                                <br />
                                <div style="overflow-x:auto;">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th style="width: 10px">#</th>
                                                <th>Yetenek</th>
                                                <th>Derece</th>
                                                <th style="width: 40px">Oran</th>
                                                <th>Düzenle</th>
                                                <th>Sil</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                if (item.Oran <= 50 && item.Oran >= 0)
                                                {
                                                    renk = "progress-bar bg-danger";
                                                    labelrenk = "badge bg-danger";
                                                }
                                                if (item.Oran >= 51 && item.Oran <= 70)
                                                {
                                                    renk = "progress-bar bg-warning";
                                                    labelrenk = "badge bg-warning";
                                                }
                                                if (item.Oran >= 71 && item.Oran <= 84)
                                                {
                                                    renk = "progress-bar bg-primary";
                                                    labelrenk = "badge bg-primary";
                                                }
                                                if (item.Oran >= 85 && item.Oran <= 100)
                                                {
                                                    renk = "progress-bar bg-success";
                                                    labelrenk = "badge bg-success";
                                                }

                                                <tr>
                                                    <td>@item.ID</td>
                                                    <td>@item.Yetenek</td>
                                                    <td>
                                                        <div class="progress progress-xs">
                                                            <div class="@renk" style="width: @item.Oran%"></div>
                                                        </div>
                                                    </td>
                                                    <td><span class="@labelrenk">@item.Oran%</span></td>
                                                    <td>
                                                        <a class="btn btn-info btn-sm" href="/Yetenekler/YetenekDuzenle/@item.ID">
                                                            <i class="fas fa-pencil-alt"></i>
                                                            Düzenle
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a class="btn btn-danger btn-sm" href="/Yetenekler/YetenekSil/@item.ID">
                                                            <i class="fas fa-trash"></i>
                                                            Sil
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</body>
</html>


